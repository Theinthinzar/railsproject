<h1>Join to the <%= session[:workspace_name]%></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:joinmembers, url:invite_path)  do |f| %>
      <%= hidden_field_tag :workspaceid, params[:workspaceid] %>
      <%= hidden_field_tag :workspacename, params[:workspacename] %>
      <%= hidden_field_tag :user_email, params[:user_email] %>

      <%= f.label :fullName %>
      <%= f.text_field :user_name,class:'form-control'%>
      <br>

      <%= f.label :password %>
      <%= f.password_field :password ,class:'form-control'%>
      <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br>
      <%= f.submit "join", class: "btn btn-primary",style:"width:100%" %>
    <% end %>
  </div>
</div>


